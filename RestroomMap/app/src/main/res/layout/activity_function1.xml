<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".MainActivity"  android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" android:background="@drawable/menu">

        <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="시작"
            android:id="@+id/button1"
            android:layout_marginTop="93dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/values"/>

    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="일시정지" android:id="@+id/button2" android:layout_below="@+id/button1" android:visibility="invisible" android:layout_alignLeft="@+id/button1" android:background="@drawable/values"/>

    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="재시작" android:id="@+id/button3" android:layout_below="@+id/button2" android:visibility="invisible" android:layout_alignLeft="@+id/button2" android:background="@drawable/values"/>

    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="종료" android:id="@+id/button4" android:layout_below="@+id/button3" android:visibility="invisible" android:layout_alignLeft="@+id/button3" android:background="@drawable/values"/>

    <SeekBar android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/seekBar1"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/button4"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView2"
        android:layout_below="@+id/button3"
        android:layout_marginRight="42dp"
        android:text=" 물내리는  소리"
        android:textColor="@color/cast_expanded_controller_background_color"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/water"

        android:layout_marginEnd="20dp"
        android:layout_above="@+id/textView2"
        android:layout_toStartOf="@+id/button1" />

</RelativeLayout>